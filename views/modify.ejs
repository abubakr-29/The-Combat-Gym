      <h1 class="heading">Modify Player</h1>
      <div class="container">
        <div class="row">
          <form
            action="/admin/modify/player/<%= player.id %>/update"
            method="POST"
            enctype="multipart/form-data"
            class="mb-4 p-3 border rounded modify-form"
          >
            <div class="row">
              <div class="col-md-3 mb-3 text-center text-dark">
                <% if (player.image) { %>
                <img
                  src="<%= player.image %>"
                  alt="<%= player.name %>'s image"
                  class="img-thumbnail"
                  width="150"
                  height="150"
                />
                <% } else { %>
                <p>No image available</p>
                <% } %>
                <input
                  type="file"
                  name="image"
                  class="form-control mt-3"
                  accept="image/*"
                />
              </div>

              <div class="col-md-9">
                <div class="col-md-12 mb-3">
                  <label for="name-<%= player.id %>" class="form-label"
                    >Name</label
                  >
                  <input
                    type="text"
                    id="name-<%= player.id %>"
                    name="name"
                    class="form-control"
                    value="<%= player.name %>"
                    required
                  />
                </div>
                <div class="col-md-12 mb-3">
                  <label for="nickname-<%= player.id %>" class="form-label"
                    >Nickname</label
                  >
                  <input
                    type="text"
                    id="nickname-<%= player.id %>"
                    name="nickname"
                    class="form-control"
                    value="<%= player.nickname %>"
                    required
                  />
                </div>
                <div class="col-md-12 mb-3">
                  <label for="coach-<%= player.id %>" class="form-label"
                    >Coach</label
                  >
                  <input
                    type="text"
                    id="coach-<%= player.id %>"
                    name="coach"
                    class="form-control"
                    value="<%= player.coach %>"
                    required
                  />
                </div>
                <div class="col-md-12 mb-3">
                  <label for="club-<%= player.id %>" class="form-label"
                    >Club</label
                  >
                  <input
                    type="text"
                    id="club-<%= player.id %>"
                    name="club"
                    class="form-control"
                    value="<%= player.club %>"
                    required
                  />
                </div>
                <div class="col-md-12 mb-3">
                  <label for="birthplace-<%= player.id %>" class="form-label"
                    >Birth Place</label
                  >
                  <input
                    type="text"
                    id="birthplace-<%= player.id %>"
                    name="birthplace"
                    class="form-control"
                    value="<%= player.birth_place %>"
                    required
                  />
                </div>
                <div class="row">
                  <div class="col-md-4 mb-3">
                    <label for="gender-<%= player.id %>" class="form-label"
                      >Gender</label
                    >
                    <select
                      id="gender-<%= player.id %>"
                      name="gender"
                      class="form-select"
                      required
                    >
                      <option value="M" <%= player.gender === 'M' ? 'selected="selected"' : '' %>>Male</option>
                      <option value="F" <%= player.gender === 'F' ? 'selected="selected"' : '' %>>Female</option>
                    </select>
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="weight-<%= player.id %>" class="form-label"
                      >Weight</label
                    >
                    <input
                      type="text"
                      id="weight-<%= player.id %>"
                      name="weight"
                      class="form-control"
                      value="<%= player.weight %>"
                      required
                    />
                  </div>
                  <div class="col-md-4 mb-3">
                    <label for="height-<%= player.id %>" class="form-label"
                      >Height</label
                    >
                    <input
                      type="text"
                      id="height-<%= player.id %>"
                      name="height"
                      class="form-control"
                      value="<%= player.height %>"
